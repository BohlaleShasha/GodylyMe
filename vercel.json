{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/:path*"
    },
    {
      "source": "/api/contacts/:path*",
      "destination": "/api/contacts/:path*"
    },
    {
      "source": "/api/follows/:path*",
      "destination": "/api/follows/:path*"
    },
    {
      "source": "/api/feed/:path*",
      "destination": "/api/feed/:path*"
    },
    {
      "source": "/api/videos/:path*",
      "destination": "/api/videos/:path*"
    },
    {
      "source": "/api/messages/:path*",
      "destination": "/api/messages/:path*"
    },
    {
      "source": "/api/notifications/:path*",
      "destination": "/api/notifications/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
